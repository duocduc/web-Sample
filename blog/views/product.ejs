<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= product.title %></title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <%- include('header'); %>
    <main>
      <div class="product-container">
        <div class="product-image-container">
          <% if (product.image_path) { %>
          <img
            src="<%= product.image_path %>"
            alt="商品画像"
            class="product-image"
          />
          <% } %>
        </div>
        <div class="product-details">
          <h1><%= product.title %></h1>
          <p class="product-price">値段：<%= product.price %> 円</p>
          <div class="description"><%= product.describe %></div>
          <div class="button-container">
            <% if (!locals.isLoggedIn) { %>
            <a href="/login" class="btn login-btn">ログイン</a>
            <% } else { %>
            <a href="/buy/<%= product.id %>" class="btn buy-btn">購入する</a>
            <% } %>
          </div>
        </div>
      </div>
    </main>
    <footer>
      <a class="btn sub" href="/list">一覧にもどる</a>
    </footer>
  </body>
</html>
